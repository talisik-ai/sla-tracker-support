# Jira SLA Tracker - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# JIRA CONFIGURATION (Required for live data)
# =============================================================================

# Your Jira instance URL (without trailing slash)
# Example: https://yourcompany.atlassian.net
VITE_JIRA_INSTANCE_URL=https://your-instance.atlassian.net

# Your Jira account email
VITE_JIRA_EMAIL=your-email@example.com

# Jira API Token (Get from: https://id.atlassian.com/manage-profile/security/api-tokens)
VITE_JIRA_API_TOKEN=your-api-token-here

# Default Jira Project Key (can be changed in Settings UI)
# Example: SUPPORT, BUGS, SD, etc.
VITE_JIRA_PROJECT_KEY=SD

# =============================================================================
# JIRA CUSTOM FIELDS (Optional - for SLA sync feature)
# =============================================================================

# Custom field for SLA Due Date
VITE_JIRA_CUSTOM_FIELD_SLA_DUE_DATE=customfield_10001

# Custom field for SLA Status
VITE_JIRA_CUSTOM_FIELD_SLA_STATUS=customfield_10002

# Custom field for SLA Time Used %
VITE_JIRA_CUSTOM_FIELD_SLA_TIME_USED=customfield_10003

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================

VITE_RESEND_API_KEY=re_your_resend_api_key
VITE_EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

VITE_APP_NAME="Jira SLA Tracker"
VITE_APP_VERSION="1.0.0"
TZ=Asia/Manila
